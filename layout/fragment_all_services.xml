<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AllServicesFragment">




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/textdashboard"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Super Sales"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/person_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_icon_user"
                        android:layout_alignParentRight="true"
                        android:elevation="10dp"/>


                </RelativeLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnOrderPreserved="false"
                    android:alignmentMode="alignMargins"
                    android:background="#FFFFFF"
                    android:columnCount="2"
                    android:rowCount="3">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#F2F2F2"
                            android:padding="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/dealImage"
                                android:src="@drawable/ic_icon_deal"
                                android:layout_width="80dp"
                                android:layout_height="80dp"

                                android:layout_gravity="center"
                                android:clickable="true"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Deals"
                                android:textSize="18sp"
                                android:textColor="#000000"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="#fbfbfd"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="#F2F2F2"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/ic_icon_task_1"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Task"
                                android:textSize="18sp"
                                android:textColor="#000000"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        android:background="#fbfbfd"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="#F2F2F2"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/ic_icon_deal"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact"
                                android:textSize="18sp"
                                android:textColor="#000000"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:background="#fbfbfd"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="#F2F2F2"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/ic_icon_calendar_05"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Meetings"
                                android:textSize="18sp"
                                android:textColor="#000000"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:background="#fbfbfd"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#F2F2F2"
                            android:padding="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/ic_icon_rupee"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Earning"
                                android:textSize="18sp"
                                android:textColor="#000000"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        android:background="#fbfbfd"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#F2F2F2"
                            android:padding="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/ic_icon_task_1"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Target"
                                android:textSize="18sp"
                                android:textColor="#000000"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        android:background="#fbfbfd"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="#F2F2F2"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/ic_icon_task"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Target"
                                android:textSize="18sp"
                                android:textColor="#000000"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="#fbfbfd"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="#F2F2F2"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/ic_icon_task_1"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Target"
                                android:textSize="18sp"
                                android:textColor="#000000"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </GridLayout>

            </LinearLayout>

        </ScrollView>s



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_navigation"
        app:menu="@menu/navigation_bar"
        android:background="#FFFFFF"

        app:itemIconSize="30dp"
        android:elevation="3dp">

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>